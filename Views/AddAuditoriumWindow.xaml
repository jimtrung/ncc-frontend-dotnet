<Window x:Class="Theater_Management_FE.Views.AddAuditoriumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Auditorium"
        Height="700" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Add auditorium"
                       x:Name="titleLabel"
                       Style="{StaticResource title}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <Border Style="{StaticResource card}"
                    Padding="25"
                    CornerRadius="12">
                <StackPanel>
                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Enter auditorium name" Style="{StaticResource form-label}" Margin="0,0,0,6"/>
                        <TextBox x:Name="auditoriumNameField" Style="{StaticResource form-input}" Width="340"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Enter auditorium type" Style="{StaticResource form-label}" Margin="0,0,0,6"/>
                        <TextBox x:Name="auditoriumTypeField" Style="{StaticResource form-input}" Width="340"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Enter auditorium capacity" Style="{StaticResource form-label}" Margin="0,0,0,6"/>
                        <TextBox x:Name="auditoriumCapacityField" Style="{StaticResource form-input}" Width="340"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Enter auditorium note" Style="{StaticResource form-label}" Margin="0,0,0,6"/>
                        <TextBox x:Name="auditoriumNoteField"
                                 Style="{StaticResource form-input}"
                                 Width="340" Height="200"
                                 TextWrapping="Wrap" AcceptsReturn="True"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,20,0,0">
                        <Button Content="Back"
                                x:Name="backButton"
                                Style="{StaticResource button-secondary}"
                                Margin="0,0,14,0"/>
                        <Button Content="Add auditorium"
                                x:Name="addAuditoriumButton"
                                Style="{StaticResource button-primary}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
