<Window x:Class="Theater_Management_FE.Views.BookTicket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="National Cinema Center"
        WindowState="Maximized"
        Style="{StaticResource CustomWindowStyle}"
        Background="{StaticResource PrimaryBackground}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Ticket Information"
                       Style="{StaticResource title}"/>
            <Border Style="{StaticResource card}"
                    Padding="32"
                    Width="600">
                <StackPanel>
                    <!-- Tên phim -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Tên phim"
                                   Style="{StaticResource form-label}"/>
                        <TextBox x:Name="ticketMovieName"
                                 Style="{StaticResource form-input}"
                                 IsReadOnly="True"/>
                    </StackPanel>

                    <!-- Tên phòng chiếu -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Tên phòng chiếu"
                                   Style="{StaticResource form-label}"/>
                        <TextBox x:Name="ticketAuditoriumName"
                                 Style="{StaticResource form-input}"
                                 IsReadOnly="True"/>
                    </StackPanel>

                    <!-- Ngày chiếu phim -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Ngày chiếu phim"
                                   Style="{StaticResource form-label}"/>
                        <TextBox x:Name="ticketDate"
                                 Style="{StaticResource form-input}"
                                 IsReadOnly="True"/>
                    </StackPanel>

                    <!-- Giờ bắt đầu và kết thúc trên cùng 1 dòng -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,16"
                                HorizontalAlignment="Left">
                        <StackPanel Margin="0,0,16,0">
                            <TextBlock Text="Giờ bắt đầu"
                                       Style="{StaticResource form-label}"/>
                            <TextBox x:Name="ticketStartTime"
                                     Style="{StaticResource form-input}"
                                     Width="120"
                                     IsReadOnly="True"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Giờ kết thúc"
                                       Style="{StaticResource form-label}"/>
                            <TextBox x:Name="ticketEndTime"
                                     Style="{StaticResource form-input}"
                                     Width="120"
                                     IsReadOnly="True"/>
                        </StackPanel>
                    </StackPanel>


                    <!-- Giá vé + chọn ghế -->
                    <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,24">
                        <!-- Giá vé -->
                        <StackPanel Margin="0,0,16,0">
                            <TextBlock Text="Giá vé"
                                       Style="{StaticResource form-label}"/>
                            <TextBox x:Name="ticketPrice"
                                     Style="{StaticResource form-input}"
                                     IsReadOnly="True"
                                     Width="120"/>
                        </StackPanel>

                        <!-- Chọn ghế -->
                        <StackPanel>
                            <TextBlock Text="Chọn ghế"
                                       Style="{StaticResource form-label}"/>
                            <ComboBox x:Name="ticketSeatSelector"
                                      Width="50" FontSize="14" Margin="0,10,0,0">
                                <!-- Ví dụ ghế mẫu, có thể load từ service -->
                                <ComboBoxItem Content="A1"/>
                                <ComboBoxItem Content="A2"/>
                                <ComboBoxItem Content="A3"/>
                                <ComboBoxItem Content="B1"/>
                                <ComboBoxItem Content="B2"/>
                                <ComboBoxItem Content="B3"/>
                                <ComboBoxItem Content="C1"/>
                                <ComboBoxItem Content="C2"/>
                                <ComboBoxItem Content="C3"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- Nút -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button x:Name="backButton"
                                Content="Quay lại"
                                Style="{StaticResource button-secondary}"
                                Margin="0,0,12,0"/>
                        <Button x:Name="bookTicketButton"
                                Content="Đặt vé"
                                Style="{StaticResource button-danger}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>
