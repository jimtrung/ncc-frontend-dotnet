<Window x:Class="Theater_Management_FE.Views.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized">
    <StackPanel HorizontalAlignment="Center">
        <Label Content="Sign Up" HorizontalAlignment="Center"/>
        <StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <Label Content="Username"/>
                <TextBox x:Name="usernameField"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <Label Content="Email"/>
                <TextBox x:Name="emailField"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <Label Content="Phone Number"/>
                <TextBox x:Name="phoneNumberField"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <Label Content="Password"/>
                <PasswordBox x:Name="passwordField"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="backButton" Content="Back"/>
                <Button x:Name="signUpButton" Content="Sign Up"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
