<Window x:Class="Theater_Management_FE.Views.AddMovie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Movie" Height="600" Width="950"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Add movie" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20" Grid.Row="0"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="30"/> <!-- Spacing -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column: Movie Info -->
            <StackPanel Grid.Column="0">
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Enter movie name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="movieNameField" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Select genre(s)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="searchGenreField" Padding="5" Margin="0,0,0,5"/> <!-- Placeholder handled in code or style -->
                    <ListView x:Name="genreListView" Height="150" SelectionMode="Multiple">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Item}" IsChecked="{Binding IsSelected}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Enter movie description" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="movieDescriptionField" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Padding="5"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="Age limit" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="movieRatedField" Width="60" Padding="5"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="Duration" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="movieDurationField" Width="60" Padding="5"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Language" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="movieLanguageField" Width="120" Padding="5"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Right Column: Directors and Actors -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Directors -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Select director" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="searchDirectorField" Padding="5" Margin="0,0,0,5"/>
                    <ListView x:Name="directorListView" Height="150" SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Content="{Binding Item.FullName}" GroupName="Directors" IsChecked="{Binding IsSelected}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <!-- Actors -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="Select actor(s)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="searchActorField" Padding="5" Margin="0,0,0,5"/>
                    <ListView x:Name="actorListView" Height="150" SelectionMode="Multiple">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Item.FullName}" IsChecked="{Binding IsSelected}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Button Group -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="backButton" Content="Back" Width="80" Height="30" Margin="0,0,10,0"/>
            <Button x:Name="addMovieButton" Content="Add" Width="80" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
