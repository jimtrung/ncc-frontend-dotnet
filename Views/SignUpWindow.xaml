<Window x:Class="Theater_Management_FE.Views.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up"
        Width="450"
        Height="500"
        Background="White">

    <StackPanel HorizontalAlignment="Center" Margin="20">

        <Label Content="Sign Up" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Width="400" Background="#F5F5F5">

            <StackPanel Margin="0,0,0,12" HorizontalAlignment="Center">
                <Label Content="Username"/>
                <TextBox Width="340" Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,12" HorizontalAlignment="Center">
                <Label Content="Email"/>
                <TextBox Width="340" Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,12" HorizontalAlignment="Center">
                <Label Content="Phone Number"/>
                <TextBox Width="340" Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,12" HorizontalAlignment="Center">
                <Label Content="Password"/>
                <PasswordBox Width="340" Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Back" Width="80" Background="#CCCCCC" Margin="0,0,14,0"/>
                <Button Content="Sign Up" Width="80" Background="#2196F3" Foreground="White"/>
            </StackPanel>

        </StackPanel>

    </StackPanel>

</Window>
