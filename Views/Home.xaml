<Window x:Class="Theater_Management_FE.Views.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="National Cinema Center"
        WindowState="Maximized"
        Style="{StaticResource CustomWindowStyle}"
        Background="{StaticResource PrimaryBackground}">
    <Grid Background="#0F1419">

        <Border Style="{StaticResource card}"
                Width="500"
                Padding="48,40"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel>
                
                <TextBlock Text="Quản Lý Rạp Chiếu Phim"
                           x:Name="titleLabel"
                           Style="{StaticResource title}"
                           FontSize="28"
                           Margin="0,0,0,8"/>
                
                <TextBlock Text="Chào mừng đến với Trung Tâm Chiếu Phim Quốc Gia"
                           Foreground="{StaticResource SecondaryText}"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,32"/>

                <Button x:Name="signinButton"
                        Content="Đăng Nhập"
                        Style="{StaticResource button-primary}"
                        Margin="0,0,0,12"
                        Padding="24,14"
                        FontSize="16"/>
                
                <Button x:Name="signupButton"
                        Content="Đăng Ký"
                        Style="{StaticResource button-secondary}"
                        Margin="0,0,0,12"
                        Padding="24,14"
                        FontSize="16"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
