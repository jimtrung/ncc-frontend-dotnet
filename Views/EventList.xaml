<Window x:Class="Theater_Management_FE.Views.EventList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="National Cinema Center"
        Width="1200" Height="800"
        WindowState="Maximized"
        Style="{StaticResource CustomWindowStyle}"
        WindowStartupLocation="CenterScreen">


 
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Filter -->
            <RowDefinition Height="*"/>    <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{StaticResource SecondaryBackground}" Padding="16" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- Logo -->
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="TRUNG TÂM CHIẾU PHIM QUỐC GIA" Foreground="{StaticResource PrimaryText}" FontSize="18" FontWeight="Bold" TextWrapping="Wrap" />
                        <TextBlock Text="National Cinema Center" Foreground="{StaticResource SecondaryText}" FontSize="14" />
                    </StackPanel>
                </StackPanel>

                <!-- Navigation Buttons -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="homeButton" Style="{StaticResource NavButtonStyle}" Content="Trang chủ" />
                    <Button x:Name="showTimeButton" Style="{StaticResource NavButtonStyle}" Content="Lịch chiếu" />
                    <Button x:Name="bookTicketButton" Style="{StaticResource NavButtonStyle}" Content="Các vé đã đặt" />
                    <Button x:Name="newsButton" Style="{StaticResource NavButtonStyle}" Content="Tin tức" />
                    <Button x:Name="promotionButton" Style="{StaticResource NavButtonStyle}" Content="Khuyến mãi" />
                    <Button x:Name="priceButton" Style="{StaticResource NavButtonStyle}" Content="Giá vé" />
                    <Button x:Name="aboutButton" Style="{StaticResource NavButtonStyle}" Content="Giới thiệu" />
                </StackPanel>

                <!-- User Profile Section -->
                <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <StackPanel Margin="0,0,12,0" VerticalAlignment="Center">
                        <TextBlock Text="Xin chào," Foreground="{StaticResource SecondaryText}" FontSize="12" HorizontalAlignment="Right" />
                        <TextBlock x:Name="usernameText" Text="Khách" Foreground="{StaticResource PrimaryText}" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Right" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="profileButton" Content="Hồ sơ" Style="{StaticResource NavButtonStyle}" Margin="0,0,8,0" Visibility="Collapsed"/>
                        <Button x:Name="logoutButton" Content="Đăng xuất" Style="{StaticResource NavButtonStyle}" Foreground="{StaticResource Danger}" Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="{StaticResource SecondaryBackground}" Padding="20">
            <StackPanel HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,5">
                    <TextBlock Text="Ưu Đãi &amp; Khuyến Mãi"
                             Foreground="{StaticResource PrimaryText}"
                               FontSize="28" FontWeight="Bold" />
                    </StackPanel>
                <Rectangle Height="2" 
Width="200" Fill="{StaticResource PrimaryAccent}" Margin="0,5,0,0"/> 
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,15" Background="{StaticResource PrimaryBackground}">
            <TextBlock Text="Lọc theo:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource PrimaryText}"/>
            
            <ComboBox SelectedIndex="0" Width="150" Margin="0,0,10,0">
                <ComboBoxItem Content="Tất cả"/>
               <ComboBoxItem Content="Phim"/>
                <ComboBoxItem Content="Âm nhạc"/>
                <ComboBoxItem Content="Du lịch"/>
                <ComboBoxItem Content="Khác"/>
            </ComboBox>

            <TextBlock Text="Sắp xếp:" VerticalAlignment="Center" Margin="20,0,10,0" FontSize="14" FontWeight="SemiBold" 
Foreground="{StaticResource PrimaryText}"/>
            <ComboBox SelectedIndex="0" Width="150">
                <ComboBoxItem Content="Ngày kết thúc (sớm nhất)"/>
                <ComboBoxItem Content="Ngày kết thúc (muộn nhất)"/>
                <ComboBoxItem Content="Mới nhất"/>
            </ComboBox>
        </StackPanel>

      
  <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                
                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2" HorizontalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <Border BorderThickness="0" CornerRadius="10" Margin="10" Width="450" 
                            Background="White" Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="3" Direction="270" Color="#DDDDDD" Opacity="0.6" BlurRadius="8"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid Height="200">
                                <Border CornerRadius="10,10,0,0" Background="Transparent" ClipToBounds="True">
                                    <Image Source="https://picsum.photos/450/200?random=1" Stretch="UniformToFill"/>
                                </Border>
                                <Border Background="#FF4500" HorizontalAlignment="Right" VerticalAlignment="Top" 
                                        Margin="0, 15, 15, 0" Padding="10,5" CornerRadius="5">
                                    <TextBlock Text="HOT" FontWeight="Bold" Foreground="White" FontSize="13"/>
                                </Border>
                            </Grid>
                            <StackPanel Margin="15,10,15,15" >
                                <TextBlock Text="Combo Bỏng Nước Siêu To Khổng Lồ Giảm 30%!!!" FontWeight="ExtraBold" FontSize="17" 
                                           Foreground="#333333" TextWrapping="Wrap" TextTrimming="CharacterEllipsis"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Kết thúc: 31/12" FontSize="12" Foreground="#666666"/>
                                </StackPanel>
                                <Button Content="Xem chi tiết" HorizontalAlignment="Right" Margin="0,15,0,0" />
                            </StackPanel>
                        </StackPanel>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F5F9"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="BorderBrush" Value="#007ACC"/>
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <TranslateTransform Y="-3"/> </Setter.Value>
                                        </Setter>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect ShadowDepth="5" Direction="270" Color="#BBBBBB" Opacity="0.8" BlurRadius="12"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>

                    <Border BorderThickness="0" CornerRadius="10" Margin="10" Width="450" 
                            Background="White" Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="3" Direction="270" Color="#DDDDDD" Opacity="0.6" BlurRadius="8"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid Height="200">
                                <Border CornerRadius="10,10,0,0" Background="Transparent" ClipToBounds="True">
                                    <Image Source="https://picsum.photos/450/200?random=2" Stretch="UniformToFill"/>
                                </Border>
                                <Border Background="#1E90FF" HorizontalAlignment="Right" VerticalAlignment="Top" 
                                        Margin="0, 15, 15, 0" Padding="10,5" CornerRadius="5">
                                    <TextBlock Text="MỚI" FontWeight="Bold" Foreground="White" FontSize="13"/>
                                </Border>
                            </Grid>
                            <StackPanel Margin="15,10,15,15" >
                                <TextBlock Text="Ưu Đãi Đặc Biệt: Đồng Giá Vé 45K Cho Học Sinh Sinh Viên" FontWeight="ExtraBold" FontSize="17" 
                                           Foreground="#333333" TextWrapping="Wrap" TextTrimming="CharacterEllipsis"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Kết thúc: 30/11" FontSize="12" Foreground="#666666"/>
                                </StackPanel>
                                <Button Content="Xem chi tiết" HorizontalAlignment="Right" Margin="0,15,0,0" />
                            </StackPanel>
                        </StackPanel>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F5F9"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="BorderBrush" Value="#007ACC"/>
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <TranslateTransform Y="-3"/> </Setter.Value>
                                        </Setter>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect ShadowDepth="5" Direction="270" Color="#BBBBBB" Opacity="0.8" BlurRadius="12"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                    
                    <Border BorderThickness="0" CornerRadius="10" Margin="10" Width="450" 
                            Background="White" Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="3" Direction="270" Color="#DDDDDD" Opacity="0.6" BlurRadius="8"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid Height="200">
                                <Border CornerRadius="10,10,0,0" Background="Transparent" ClipToBounds="True">
                                    <Image Source="https://picsum.photos/450/200?random=3" Stretch="UniformToFill"/>
                                </Border>
                                <Border Background="#4CAF50" HorizontalAlignment="Right" VerticalAlignment="Top" 
                                        Margin="0, 15, 15, 0" Padding="10,5" CornerRadius="5">
                                    <TextBlock Text="SỐC" FontWeight="Bold" Foreground="White" FontSize="13"/>
                                </Border>
                            </Grid>
                            <StackPanel Margin="15,10,15,15" >
                                <TextBlock Text="Thứ Hai Vui Vẻ: Giảm 25% Tất Cả Các Loại Vé Trong Ngày" FontWeight="ExtraBold" FontSize="17" 
                                           Foreground="#333333" TextWrapping="Wrap" TextTrimming="CharacterEllipsis"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Kết thúc: 31/10" FontSize="12" Foreground="#666666"/>
                                </StackPanel>
                                <Button Content="Xem chi tiết" HorizontalAlignment="Right" Margin="0,15,0,0" />
                            </StackPanel>
                        </StackPanel>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F5F9"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="BorderBrush" Value="#007ACC"/>
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <TranslateTransform Y="-3"/> </Setter.Value>
                                        </Setter>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect ShadowDepth="5" Direction="270" Color="#BBBBBB" Opacity="0.8" BlurRadius="12"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                    
                    <Border BorderThickness="0" CornerRadius="10" Margin="10" Width="450" 
                            Background="White" Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="3" Direction="270" Color="#DDDDDD" Opacity="0.6" BlurRadius="8"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid Height="200">
                                <Border CornerRadius="10,10,0,0" Background="Transparent" ClipToBounds="True">
                                    <Image Source="https://picsum.photos/450/200?random=4" Stretch="UniformToFill"/>
                                </Border>
                                <Border Background="#FFA500" HorizontalAlignment="Right" VerticalAlignment="Top" 
                                        Margin="0, 15, 15, 0" Padding="10,5" CornerRadius="5">
                                    <TextBlock Text="ĐỘC QUYỀN" FontWeight="Bold" Foreground="White" FontSize="13"/>
                                </Border>
                            </Grid>
                            <StackPanel Margin="15,10,15,15" >
                                <TextBlock Text="Đăng Ký Thành Viên Mới: Tặng Voucher 100K Xem Phim Bất Kỳ" FontWeight="ExtraBold" FontSize="17" 
                                           Foreground="#333333" TextWrapping="Wrap" TextTrimming="CharacterEllipsis"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Kết thúc: 01/01/2026" FontSize="12" Foreground="#666666"/>
                                </StackPanel>
                                <Button Content="Xem chi tiết" HorizontalAlignment="Right" Margin="0,15,0,0" />
                            </StackPanel>
                        </StackPanel>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F5F9"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="BorderBrush" Value="#007ACC"/>
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <TranslateTransform Y="-3"/> </Setter.Value>
                                        </Setter>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect ShadowDepth="5" Direction="270" Color="#BBBBBB" Opacity="0.8" BlurRadius="12"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                    
                </ItemsControl>
                <ItemsControl ItemsSource="{Binding Events}" x:Name="eventItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                    
        <UniformGrid Columns="2" HorizontalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
 
                           <Border BorderThickness="0" CornerRadius="10" Margin="10" Width="450" 
                                    Background="White" Cursor="Hand">
                               
 
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="3" Direction="270" Color="#DDDDDD" Opacity="0.6" BlurRadius="8"/>
                          
      </Border.Effect>

                                <StackPanel>
                                    <Grid Height="200">
                         
               <Border CornerRadius="10,10,0,0" Background="Transparent" ClipToBounds="True">
                                            <Image Source="{Binding ImageUrl}" Stretch="UniformToFill"/>
                                   
     </Border>
                                        
                                        <Border Background="#FF4500" HorizontalAlignment="Right" VerticalAlignment="Top" 
           
                                     Margin="0, 15, 15, 0" Padding="10,5" CornerRadius="5">
                                            <TextBlock Text="HOT" FontWeight="Bold" Foreground="White" FontSize="13"/>
          
                              </Border>
                                    </Grid>

                                  
  <StackPanel Margin="15,10,15,15" >
                                        <TextBlock Text="{Binding Title}" FontWeight="ExtraBold" FontSize="17" 
                                                   
Foreground="#333333" TextWrapping="Wrap" TextTrimming="CharacterEllipsis"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding EndDate, StringFormat='Kết thúc: {0:dd/MM}'}" 
      
                                                 FontSize="12" Foreground="#666666"/>
                                        </StackPanel>
          
                              
                                        <Button Content="Xem chi tiết" 
                          
                      HorizontalAlignment="Right" Margin="0,15,0,0" />
                                    </StackPanel>
                                </StackPanel>
        
                        
                                <Border.Style>
                                    <Style TargetType="Border">
       
                                 <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                     
                           <Setter Property="Background" Value="#F0F5F9"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                     
                           <Setter Property="BorderBrush" Value="#007ACC"/>
                                                <Setter Property="RenderTransform">
                      
                              <Setter.Value>
                                                        <TranslateTransform Y="-3"/> </Setter.Value>
            
                                    </Setter>
                                                <Setter Property="Effect">
               
                                     <Setter.Value>
                                                        <DropShadowEffect ShadowDepth="5" Direction="270" Color="#BBBBBB" Opacity="0.8" BlurRadius="12"/>
  
                                                  </Setter.Value>
                                                </Setter>
  
                                          </Trigger>
                                        </Style.Triggers>
                  
                  </Style>
                                </Border.Style>
                                
                  
          </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
