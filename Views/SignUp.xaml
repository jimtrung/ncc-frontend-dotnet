<Window x:Class="Theater_Management_FE.Views.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up - Theater Management"
        WindowState="Maximized"
        Style="{StaticResource CustomWindowStyle}"
        Background="{StaticResource PrimaryBackground}">
    <Grid>
        <!-- Gradient Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F1419" Offset="0"/>
                <GradientStop Color="#1A1F2E" Offset="0.5"/>
                <GradientStop Color="#0F1419" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Content -->
        <Border Style="{StaticResource card}"
                Width="450"
                Padding="48,40"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Create Account"
                           Style="{StaticResource title}"
                           FontSize="28"
                           Margin="0,0,0,8"/>
                
                <TextBlock Text="Join the National Cinema Center"
                           Foreground="{StaticResource SecondaryText}"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,32"/>

                <!-- Username Field -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Username"
                               Style="{StaticResource form-label}"/>
                    <TextBox x:Name="usernameField"
                             Style="{StaticResource form-input}"/>
                </StackPanel>

                <!-- Email Field -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Email"
                               Style="{StaticResource form-label}"/>
                    <TextBox x:Name="emailField"
                             Style="{StaticResource form-input}"/>
                </StackPanel>

                <!-- Phone Number Field -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Phone Number"
                               Style="{StaticResource form-label}"/>
                    <TextBox x:Name="phoneNumberField"
                             Style="{StaticResource form-input}"/>
                </StackPanel>

                <!-- Password Field -->
                <StackPanel Margin="0,0,0,28">
                    <TextBlock Text="Password"
                               Style="{StaticResource form-label}"/>
                    <PasswordBox x:Name="passwordField"
                                 Style="{StaticResource form-password}"/>
                </StackPanel>

                <!-- Buttons -->
                <Button x:Name="signUpButton"
                        Content="Sign Up"
                        Style="{StaticResource button-primary}"
                        Margin="0,0,0,12"
                        Padding="24,14"
                        FontSize="16"/>
                
                <Button x:Name="backButton"
                        Content="Back"
                        Style="{StaticResource button-secondary}"
                        Padding="24,14"
                        FontSize="16"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
