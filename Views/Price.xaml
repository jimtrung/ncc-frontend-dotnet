<Window x:Class="Theater_Management_FE.Views.Price"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="National Cinema Center"
        Width="1200" Height="800"
        WindowState="Maximized"
        Style="{StaticResource CustomWindowStyle}"
        WindowStartupLocation="CenterScreen">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{StaticResource SecondaryBackground}" Padding="16" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- Logo -->
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="TRUNG TÂM CHIẾU PHIM QUỐC GIA" Foreground="{StaticResource PrimaryText}" FontSize="18" FontWeight="Bold" TextWrapping="Wrap" />
                        <TextBlock Text="National Cinema Center" Foreground="{StaticResource SecondaryText}" FontSize="14" />
                    </StackPanel>
                </StackPanel>

                <!-- Navigation Buttons -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="homeButton" Style="{StaticResource NavButtonStyle}" Content="Trang chủ" />
                    <Button x:Name="showTimeButton" Style="{StaticResource NavButtonStyle}" Content="Lịch chiếu" />
                    <Button x:Name="bookTicketButton" Style="{StaticResource NavButtonStyle}" Content="Các vé đã đặt" />
                    <Button x:Name="newsButton" Style="{StaticResource NavButtonStyle}" Content="Tin tức" />
                    <Button x:Name="promotionButton" Style="{StaticResource NavButtonStyle}" Content="Khuyến mãi" />
                    <Button x:Name="priceButton" Style="{StaticResource NavButtonStyle}" Content="Giá vé" />
                    <Button x:Name="aboutButton" Style="{StaticResource NavButtonStyle}" Content="Giới thiệu" />
                </StackPanel>

                <!-- User Profile Section -->
                <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <StackPanel Margin="0,0,12,0" VerticalAlignment="Center">
                        <TextBlock Text="Xin chào," Foreground="{StaticResource SecondaryText}" FontSize="12" HorizontalAlignment="Right" />
                        <TextBlock x:Name="usernameText" Text="Khách" Foreground="{StaticResource PrimaryText}" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Right" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="profileButton" Content="Hồ sơ" Style="{StaticResource NavButtonStyle}" Margin="0,0,8,0" Visibility="Collapsed"/>
                        <Button x:Name="logoutButton" Content="Đăng xuất" Style="{StaticResource NavButtonStyle}" Foreground="{StaticResource Danger}" Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center"
                        Width="1100"
                        Margin="0,30,0,50">

                <!-- Title -->
                <TextBlock Text="GIÁ VÉ (Áp dụng từ ngày 01/06/2023)"
                           Foreground="{StaticResource Danger}"
                           FontSize="28"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="0,0,0,25"/>

                <!-- Image -->
                <Image Source="/Resources/Images/giave2.png"
                       Width="1100"
                       Stretch="Uniform"
                       Margin="0,0,0,30"/>

                <!-- Content -->
                <StackPanel>

                    <TextBlock FontSize="18" Foreground="{StaticResource PrimaryText}" TextWrapping="Wrap" Margin="0,0,0,10">
                        * Đối với phim có thời lượng từ 150 phút trở xuống: giảm 10.000 VNĐ / vé
                    </TextBlock>

                    <TextBlock FontSize="20" Foreground="{StaticResource PrimaryText}" FontWeight="Bold" Margin="0,15,0,10">
                        Giá vé đối với các đối tượng khán giả ưu tiên:
                    </TextBlock>

                    <TextBlock FontSize="18" Foreground="{StaticResource PrimaryText}" Margin="15,0,0,6">
                        - Giảm 20%: Trẻ em (dưới 16 tuổi), người cao tuổi (từ đủ 60 tuổi),
                        người có công với cách mạng, người có hoàn cảnh đặc biệt khó khăn
                    </TextBlock>

                    <TextBlock FontSize="18" Foreground="{StaticResource PrimaryText}" Margin="15,0,0,6">
                        - Giảm 50%: Người khuyết tật nặng
                    </TextBlock>

                    <TextBlock FontSize="18" Foreground="{StaticResource PrimaryText}" Margin="15,0,0,15">
                        - Giảm 100%: Người khuyết tật đặc biệt nặng, trẻ em dưới 0.7m đi kèm người lớn
                    </TextBlock>


                    <TextBlock FontSize="20" Foreground="{StaticResource PrimaryText}" FontWeight="Bold" Margin="0,15,0,10">
                        Điều kiện áp dụng:
                    </TextBlock>

                    <TextBlock FontSize="18" Foreground="{StaticResource PrimaryText}" Margin="15,0,0,6">
                        - Chỉ áp dụng khi mua vé tại quầy
                    </TextBlock>

                    <TextBlock FontSize="18" Foreground="{StaticResource PrimaryText}" Margin="15,0,0,15">
                        - Phải xuất trình giấy tờ khi mua vé
                    </TextBlock>


                    <TextBlock FontSize="20" Foreground="{StaticResource PrimaryText}" FontWeight="Bold" Margin="0,15,0,10">
                        Lưu ý:
                    </TextBlock>

                    <TextBlock FontSize="18" Foreground="{StaticResource PrimaryText}" Margin="15,0,0,6">
                        - Trẻ em dưới 13 tuổi nếu phim kết thúc sau 22h
                    </TextBlock>

                    <TextBlock FontSize="18" Foreground="{StaticResource PrimaryText}" Margin="15,0,0,6">
                        - Trẻ em dưới 16 tuổi nếu phim kết thúc sau 23h
                    </TextBlock>

                    <TextBlock FontSize="18" Foreground="{StaticResource PrimaryText}" Margin="15,0,0,15">
                        - Giá vé ngày lễ: Tết, 30/4, 1/5, 2/9, 14/2, 8/3, 24/12
                    </TextBlock>


                    <TextBlock FontSize="18" Foreground="{StaticResource PrimaryText}" Margin="0,10,0,0">
                        TTCPQG không hoàn tiền vé đã thanh toán online.
                    </TextBlock>

                    <TextBlock FontSize="18" Foreground="{StaticResource PrimaryText}" Margin="0,10,0,0">
                        Xin cảm ọn – Chúc quý khách xem phim vui vẻ!
                    </TextBlock>

                </StackPanel>

            </StackPanel>

        </ScrollViewer>

    </Grid>

</Window>
