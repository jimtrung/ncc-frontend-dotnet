<Window x:Class="Theater_Management_FE.Views.ShowtimeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Showtime List"
        Width="600"
        Height="750"
        Background="White">

    <StackPanel HorizontalAlignment="Center" Margin="20">

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">
            <Button Content="❌" Width="40" Height="40"/>
        </StackPanel>

        <Grid HorizontalAlignment="Center" Margin="0,0,0,20">
            <DataGrid Width="520" Height="600" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tên Phim" Width="180"/>
                    <DataGridTextColumn Header="Số vé" Width="100"/>
                    <DataGridTextColumn Header="Bắt đầu" Width="125"/>
                    <DataGridTextColumn Header="Kết thúc" Width="125"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
            <Button Content="Delete all" Width="100" Height="30" Background="#2196F3" Foreground="White" Margin="0,0,10,0"/>
            <Button Content="Add showtime" Width="120" Height="30" Background="#2196F3" Foreground="White"/>
        </StackPanel>

    </StackPanel>

</Window>
