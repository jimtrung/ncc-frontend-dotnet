<Window x:Class="Theater_Management_FE.Views.HomePageManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="National Cinema Center"
        WindowState="Maximized"
        Style="{StaticResource CustomWindowStyle}"
        Background="{StaticResource PrimaryBackground}">
    <DockPanel>
        <Border DockPanel.Dock="Top" Background="{StaticResource SecondaryBackground}" BorderBrush="{StaticResource Border}" BorderThickness="0,0,0,1" Padding="16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="movieButton" Content="Phim" Style="{StaticResource button-primary}" Margin="0,0,10,0"/>
                <Button x:Name="auditoriumButton" Content="Phòng Chiếu" Style="{StaticResource button-primary}" Margin="0,0,10,0"/>
                <Button x:Name="showtimeButton" Content="Lịch Chiếu" Style="{StaticResource button-primary}" Margin="0,0,10,0"/>
                <Button x:Name="profileButton" Content="Hồ Sơ" Style="{StaticResource button-primary}" Margin="0,0,10,0"/>
                <Button x:Name="logOutButton" Content="Đăng Xuất" Style="{StaticResource button-danger}"/>
            </StackPanel>
        </Border>
        <Grid x:Name="contentGrid" Margin="20"/>

    </DockPanel>
</Window>
