<Window x:Class="Theater_Management_FE.Views.AddShowtimeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Add Showtime (Static Demo)"
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <Button Content="Hiện danh sách phim"
                    Width="200"
                    Margin="0,0,0,10"/>

            <ListView Width="400"
                      Height="250"
                      Margin="0,10,0,10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="5">
                            <TextBlock Text="{Binding}" FontSize="14"/>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.Items>
                    <sys:String>Inception</sys:String>
                    <sys:String>Interstellar</sys:String>
                    <sys:String>Oppenheimer</sys:String>
                    <sys:String>Tenet</sys:String>
                    <sys:String>Dunkirk</sys:String>
                </ListView.Items>
            </ListView>

            <TextBox Text="Bạn đã chọn: Interstellar"
                     IsReadOnly="True"
                     Width="400"
                     Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
