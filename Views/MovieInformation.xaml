<Window x:Class="Theater_Management_FE.Views.MovieInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel HorizontalAlignment="Center">
            <Label Content="Movie Information" HorizontalAlignment="Center"/>
            <StackPanel>
                <StackPanel>
                    <Label Content="Movie Name"/>
                    <TextBox/>
                </StackPanel>
                <StackPanel>
                    <Label Content="Description"/>
                    <TextBox TextWrapping="Wrap" AcceptsReturn="True"/>
                </StackPanel>
                <StackPanel>
                    <Label Content="Director ID"/>
                    <TextBox/>
                </StackPanel>
                <StackPanel>
                    <Label Content="Genres (comma-separated)"/>
                    <TextBox/>
                </StackPanel>
                <StackPanel>
                    <Label Content="Premiere (YYYY-MM-DD HH:mm:ss)"/>
                    <TextBox/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <StackPanel>
                        <Label Content="Duration (min)"/>
                        <TextBox/>
                    </StackPanel>
                    <StackPanel>
                        <Label Content="Rated (age)"/>
                        <TextBox/>
                    </StackPanel>
                </StackPanel>
                <StackPanel>
                    <Label Content="Language"/>
                    <TextBox/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Back"/>
                    <Button Content="Edit"/>
                    <Button Content="Delete"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
