<Window x:Class="Theater_Management_FE.Views.Tintuc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tin tức" Width="2000" Height="850" Background="#0e1015">

    <Window.Resources>

        <!-- Navbar Buttons -->
        <Style x:Key="NavBtn" TargetType="Button">
            <Setter Property="Foreground" Value="#ccc"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NavBtnActive" TargetType="Button" BasedOn="{StaticResource NavBtn}">
            <Setter Property="Foreground" Value="#c0392b"/>
            <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
        </Style>

        <!-- Buttons -->
        <Style x:Key="GreenBtn" TargetType="Button">
            <Setter Property="Background" Value="#2ecc71"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="90"/>
        </Style>

        <Style x:Key="RedBtn" TargetType="Button">
            <Setter Property="Background" Value="#e74c3c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="110"/>
        </Style>

        <!-- News Card -->
        <Style x:Key="NewsCard" TargetType="Border">
            <Setter Property="Background" Value="#1c1e24"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="10" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#272a33"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.03" ScaleY="1.03"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NewsDate" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#aaa"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <Style x:Key="NewsTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <!-- Page Button -->
        <Style x:Key="PageBtn" TargetType="Button">
            <Setter Property="Background" Value="#c62828"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e53935"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Footer -->
        <Style x:Key="FooterMenuItem" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#66b3ff"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FooterInfo" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#bfbfbf"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>

            <!-- NAVBAR -->
            <Grid Background="#0e1015" Height="70" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="40,0,0,0">
                    <Image Source="pack://application:,,,/Resources/Images/logo.png"
                           Height="45" Margin="0,0,10,0"/>
                    <TextBlock Text="NATIONAL CINEMA CENTER"
                               FontSize="20" FontWeight="Bold"
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Menu (use Margin to space items) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button  Style="{StaticResource NavBtn}" Content="Trang chủ" Margin="12,0" x:Name="btnBackHome"/>
                    <Button Style="{StaticResource NavBtn}" Content="Lịch chiếu" Margin="12,0"/>
                    <Button Style="{StaticResource NavBtnActive}" Content="Tin tức" Margin="12,0"/>
                    <Button Style="{StaticResource NavBtn}" Content="Khuyến mãi" Margin="12,0"/>
                    <Button Style="{StaticResource NavBtn}" Content="Giá vé" Margin="12,0"/>
                    <Button Style="{StaticResource NavBtn}" Content="Liên hoan phim" Margin="12,0"/>
                </StackPanel>

                <!-- Login -->
                <StackPanel Grid.Column="2" Orientation="Horizontal"
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Margin="0,0,40,0">
                    <Button Style="{StaticResource GreenBtn}" Content="Đăng ký" Margin="0,0,10,0"/>
                    <Button Style="{StaticResource RedBtn}" Content="Đăng nhập"/>
                </StackPanel>
            </Grid>

            <!-- NEWS LIST -->
