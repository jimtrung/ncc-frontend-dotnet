<Window x:Class="Theater_Management_FE.Views.AuditoriumInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="National Cinema Center"
        WindowState="Maximized"
        Style="{StaticResource CustomWindowStyle}"
        Background="{StaticResource PrimaryBackground}">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Auditorium Information"
                           Style="{StaticResource title}"/>
                <Border Style="{StaticResource card}" Padding="32" Width="500">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Auditorium Name" Style="{StaticResource form-label}"/>
                            <TextBox x:Name="AuditoriumNameField"
                                     Text="{Binding AuditoriumName, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource form-input}"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Auditorium Type" Style="{StaticResource form-label}"/>
                            <TextBox x:Name="AuditoriumTypeField"
                                     Text="{Binding AuditoriumType, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource form-input}"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Capacity" Style="{StaticResource form-label}"/>
                            <TextBox x:Name="AuditoriumCapacityField"
                                     Text="{Binding AuditoriumCapacity, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource form-input}"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,24">
                            <TextBlock Text="Note" Style="{StaticResource form-label}"/>
                            <TextBox x:Name="AuditoriumNoteField"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Text="{Binding AuditoriumNote}"
                                     Height="100"
                                     Style="{StaticResource form-input}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button Content="Back"
                                    x:Name="backButton"
                                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                                    Style="{StaticResource button-secondary}"
                                    Margin="0,0,12,0"/>
                            <Button Content="Edit"
                                    x:Name="editButton"
                                    Style="{StaticResource button-primary}"
                                    Margin="0,0,12,0"/>
                            <Button Content="Delete"
                                    x:Name="deleteButton"
                                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                                    Style="{StaticResource button-danger}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
