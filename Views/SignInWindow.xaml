<Window x:Class="TheaterManagementApp.Views.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign In"
        Width="450"
        Height="400"
        Background="White">

    <StackPanel HorizontalAlignment="Center" Margin="20">

        <Label Content="Sign In" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Width="400" Background="#F5F5F5" Margin="0,0,0,0">

            <StackPanel Margin="0,0,0,12" HorizontalAlignment="Center">
                <Label Content="Username"/>
                <TextBox Width="340" Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,12" HorizontalAlignment="Center">
                <Label Content="Password"/>
                <PasswordBox Width="340" Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                <Button Content="Back" Width="80" Background="#CCCCCC" Margin="0,0,14,0"/>
                <Button Content="Sign In" Width="80" Background="#2196F3" Foreground="White"/>
            </StackPanel>

            <TextBlock HorizontalAlignment="Center">
                <Hyperlink NavigateUri="#" TextDecorations="None">Forgot password?</Hyperlink>
            </TextBlock>

        </StackPanel>

    </StackPanel>

</Window>
