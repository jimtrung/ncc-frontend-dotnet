<Window x:Class="TheaterManagementApp.Views.HomePageUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home Page User"
        Width="1280"
        Height="900"
        Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel HorizontalAlignment="Center">

            <StackPanel Orientation="Horizontal" Margin="20" VerticalAlignment="Center">
                <Image Source="http://localhost:8080/uploads/logos/logo.png" Width="120" Height="48" Margin="0,0,20,0"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Home" Width="100" Height="30" Margin="0,0,12,0"/>
                    <Button Content="Show Times" Width="100" Height="30" Margin="0,0,12,0"/>
                    <Button Content="News" Width="100" Height="30" Margin="0,0,12,0"/>
                    <Button Content="Promotion" Width="100" Height="30" Margin="0,0,12,0"/>
                    <Button Content="About" Width="100" Height="30"/>
                </StackPanel>
                <Grid Width="1" HorizontalAlignment="Stretch"/>
                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                    <Image Source="../images/cat.jpg" Width="36" Height="36"/>
                </StackPanel>
            </StackPanel>

            <Grid Width="1200" Height="350" Margin="0,20,0,20">
                <Image Source="../images/cat.jpg" Stretch="Fill"/>
                <Label Content="THEATER MANAGEMENT" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" Foreground="White"/>
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">

                <StackPanel Width="800" Margin="0,0,40,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                        <Ellipse Width="12" Height="12" Fill="Red" Margin="0,0,8,0"/>
                        <Label Content="Now showing" FontWeight="Bold" FontSize="16"/>
                        <Grid Width="1" HorizontalAlignment="Stretch"/>
                        <TextBlock VerticalAlignment="Center">
                            <Hyperlink NavigateUri="#" TextDecorations="None">See all</Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Height="300">
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" ItemWidth="200" ItemHeight="300" Margin="10,20,10,40">
                            <Image Source="../images/cat.jpg" Width="200" Height="300" Margin="0,0,24,30"/>
                            <Image Source="../images/cat.jpg" Width="200" Height="300" Margin="0,0,24,30"/>
                            <Image Source="../images/cat.jpg" Width="200" Height="300" Margin="0,0,24,30"/>
                        </WrapPanel>
                    </ScrollViewer>
                </StackPanel>

                <StackPanel Width="350">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Promotion" FontWeight="Bold" FontSize="16"/>
                        <Grid Width="1" HorizontalAlignment="Stretch"/>
                        <TextBlock VerticalAlignment="Center">
                            <Hyperlink NavigateUri="#" TextDecorations="None">See all</Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <Image Source="../images/cat.jpg" Width="340" Height="160" Margin="0,0,0,16"/>
                        <Image Source="../images/cat.jpg" Width="340" Height="160" Margin="0,0,0,16"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Events" FontWeight="Bold" FontSize="16"/>
                        <Grid Width="1" HorizontalAlignment="Stretch"/>
                        <TextBlock VerticalAlignment="Center">
                            <Hyperlink NavigateUri="#" TextDecorations="None">See all</Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel>
                        <Image Source="../images/cat.jpg" Width="340" Height="160" Margin="0,0,0,16"/>
                        <Image Source="../images/cat.jpg" Width="340" Height="160" Margin="0,0,0,16"/>
                    </StackPanel>
                </StackPanel>

            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</Window>
