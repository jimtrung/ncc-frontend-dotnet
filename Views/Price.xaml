<Window x:Class="Theater_Management_FE.Views.Price"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Giá vé" Height="900" Width="1400"
        Background="Black">

	<Grid>
 
		<Grid.RowDefinitions>
			<RowDefinition Height="120"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- ================= HEADER ================= -->
		<Border Background="#FF111827" Padding="20" Grid.Row="0">

			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="3*"/>
					<ColumnDefinition Width="4*"/>
					<ColumnDefinition Width="2*"/>
				</Grid.ColumnDefinitions>

				<!-- Logo + Tên -->
				<StackPanel Orientation="Vertical" VerticalAlignment="Center">
					<TextBlock Text="TRUNG TÂM CHIẾU PHIM QUỐC GIA"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"/>
					<TextBlock Text="National Cinema Center"
                               Foreground="#FF9CA3AF"
                               FontSize="14"/>
				</StackPanel>

				<!-- Menu -->
				<StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <Button x:Name="homeButton" Content="Trang chủ" Margin="5" Padding="15,6"/>
                    <Button Content="Lịch chiếu" Margin="5" Padding="15,6"/>
					<Button Content="Tin tức" Margin="5" Padding="15,6"/>
					<Button Content="Khuyến mãi" Margin="5" Padding="15,6"/>
					<Button Content="Giá vé" Margin="5" Padding="15,6" Background="#E11D48" Foreground="White"/>
					<Button Content="Giới thiệu" Margin="5" Padding="15,6"/>

				</StackPanel>

				<!-- Tài khoản -->
				<StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">

					<StackPanel Margin="0,0,12,0">
						<TextBlock Text="Xin chào,"
                                   Foreground="#FF9CA3AF"
                                   FontSize="12"
                                   HorizontalAlignment="Right"/>
						<TextBlock Text="Khách"
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Right"/>
					</StackPanel>

					<Button Content="Đăng xuất"
                            Padding="16,8"
                            Background="#E11D48"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"/>
				</StackPanel>

			</Grid>

		</Border>


		<!-- ================= NỘI DUNG ================= -->
		<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">

			<StackPanel HorizontalAlignment="Center"
                        Width="1100"
                        Margin="0,30,0,50">

				<!-- Tiêu đề -->
				<TextBlock Text="GIÁ VÉ (Áp dụng từ ngày 01/06/2023)"
                           Foreground="Red"
                           FontSize="28"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="0,0,0,25"/>

				<!-- Ảnh giá vé -->
				<Image Source="/Resources/Images/giave2.png"
                       Width="1100"
                       Stretch="Uniform"
                       Margin="0,0,0,30"/>

				<!-- Nội dung -->
				<StackPanel>

					<TextBlock FontSize="18" Foreground="White" TextWrapping="Wrap" Margin="0,0,0,10">
						* Đối với phim có thời lượng từ 150 phút trở xuống: giảm 10.000 VNĐ / vé
					</TextBlock>

					<TextBlock FontSize="20" Foreground="White" FontWeight="Bold" Margin="0,15,0,10">
						Giá vé đối với các đối tượng khán giả ưu tiên:
					</TextBlock>

					<TextBlock FontSize="18" Foreground="White" Margin="15,0,0,6">
						- Giảm 20%: Trẻ em (dưới 16 tuổi), người cao tuổi (từ đủ 60 tuổi),
						người có công với cách mạng, người có hoàn cảnh đặc biệt khó khăn
					</TextBlock>

					<TextBlock FontSize="18" Foreground="White" Margin="15,0,0,6">
						- Giảm 50%: Người khuyết tật nặng
					</TextBlock>

					<TextBlock FontSize="18" Foreground="White" Margin="15,0,0,15">
						- Giảm 100%: Người khuyết tật đặc biệt nặng, trẻ em dưới 0.7m đi kèm người lớn
					</TextBlock>


					<TextBlock FontSize="20" Foreground="White" FontWeight="Bold" Margin="0,15,0,10">
						Điều kiện áp dụng:
					</TextBlock>

					<TextBlock FontSize="18" Foreground="White" Margin="15,0,0,6">
						- Chỉ áp dụng khi mua vé tại quầy
					</TextBlock>

					<TextBlock FontSize="18" Foreground="White" Margin="15,0,0,15">
						- Phải xuất trình giấy tờ khi mua vé
					</TextBlock>


					<TextBlock FontSize="20" Foreground="White" FontWeight="Bold" Margin="0,15,0,10">
						Lưu ý:
					</TextBlock>

					<TextBlock FontSize="18" Foreground="White" Margin="15,0,0,6">
						- Trẻ em dưới 13 tuổi nếu phim kết thúc sau 22h
					</TextBlock>

					<TextBlock FontSize="18" Foreground="White" Margin="15,0,0,6">
						- Trẻ em dưới 16 tuổi nếu phim kết thúc sau 23h
					</TextBlock>

					<TextBlock FontSize="18" Foreground="White" Margin="15,0,0,15">
						- Giá vé ngày lễ: Tết, 30/4, 1/5, 2/9, 14/2, 8/3, 24/12
					</TextBlock>


					<TextBlock FontSize="18" Foreground="White" Margin="0,10,0,0">
						TTCPQG không hoàn tiền vé đã thanh toán online.
					</TextBlock>

					<TextBlock FontSize="18" Foreground="White" Margin="0,10,0,0">
						Xin cảm ơn – Chúc quý khách xem phim vui vẻ!
					</TextBlock>

				</StackPanel>

			</StackPanel>

		</ScrollViewer>

	</Grid>

</Window>
