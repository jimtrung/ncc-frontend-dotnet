<Window x:Class="Theater_Management_FE.Views.AuditoriumList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        Background="{StaticResource PrimaryBackground}">
    
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- Layout 1 cột để nút và bảng thẳng hàng -->
        <Grid Width="450"> <!-- điều chỉnh độ rộng bảng -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>   <!-- Close button -->
                <RowDefinition Height="Auto"/>      <!-- DataGrid -->
                <RowDefinition Height="Auto"/>   <!-- Bottom buttons -->
            </Grid.RowDefinitions>

            <!-- Close button -->
            <Button Content="Close"
                    x:Name="closeBtn"
                    Style="{StaticResource button-secondary}"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,20"/>

            <!-- DataGrid -->
            <DataGrid x:Name="auditoriumTable"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      Style="{StaticResource data-grid-dark}"
                      Width="450"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      GridLinesVisibility="None"
                      HeadersVisibility="Column">

                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="nameColumn" Header="Tên phòng" />
                    <DataGridTextColumn x:Name="typeColumn" Header="Loại phòng" />
                    <DataGridTextColumn x:Name="capacityColumn" Header="Số lượng" />
                    <DataGridTextColumn x:Name="noteColumn" Header="Ghi chú" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Bottom buttons aligned with DataGrid -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,20">
                <Button Content="Delete All"
                        x:Name="deleteAllBtn"
                        Style="{StaticResource button-danger}"
                        Margin="0,0,10,0"/>
                <Button Content="Add Auditorium"
                        x:Name="addAuditoriumBtn"
                        Style="{StaticResource button-primary}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
