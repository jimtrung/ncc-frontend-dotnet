<Window x:Class="Theater_Management_FE.Views.HomePageUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="National Cinema Center" Width="1200" Height="800"
        Background="#FFF5F5F5">
    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1F2937"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#FF111827" Padding="16" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="TRUNG TÂM CHIẾU PHIM QUỐC GIA"
                                   Foreground="White"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="National Cinema Center"
                                   Foreground="#FF9CA3AF"
                                   FontSize="14"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Button x:Name="homeButton" Style="{StaticResource NavButtonStyle}" Content="Trang chủ" />
                    <Button x:Name="showTimesButton" Style="{StaticResource NavButtonStyle}" Content="Lịch chiếu" />
                    <Button x:Name="newsButton" Style="{StaticResource NavButtonStyle}" Content="Tin tức" />
                    <Button x:Name="promotionButton" Style="{StaticResource NavButtonStyle}" Content="Khuyến mãi" />
                    <Button x:Name="priceButton" Style="{StaticResource NavButtonStyle}" Content="Giá vé" />
                    <Button x:Name="aboutButton" Style="{StaticResource NavButtonStyle}" Content="Giới thiệu" />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Grid.Column="2"
                            VerticalAlignment="Center">
                    <StackPanel Margin="0,0,12,0">
                        <TextBlock Text="Xin chào,"
                                   Foreground="#FF9CA3AF"
                                   FontSize="12"
                                   HorizontalAlignment="Right"/>
                        <TextBlock x:Name="usernameText"
                                   Text="Khách"
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>
                    <Button x:Name="logoutButton"
                            Content="Đăng xuất"
                            Padding="16,8"
                            Background="#FFE11D48"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Visibility="Collapsed"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">
                <!-- Banner -->
                <Grid Height="300" Margin="0,0,0,24">
                    <Image Source="/Resources/Images/cat.jpg" Stretch="Fill"/>
                    <Label Content="THEATER MANAGEMENT"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="32"
                           Foreground="White"/>
                </Grid>

                <!-- Now showing section -->
                <Border Background="White" Padding="24" CornerRadius="16" Margin="0,0,0,24">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="20" Height="20" Fill="Red"/>
                            <Label Content="Now showing" Margin="5"/>
                            <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#FF4B5563">
                                <Hyperlink NavigateUri="#" TextDecorations="None">Xem tất cả</Hyperlink>
                            </TextBlock>
                        </StackPanel>

                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled"
                                      Height="250"
                                      Margin="0,12,0,0">
                            <WrapPanel x:Name="movieList" Orientation="Horizontal" HorizontalAlignment="Left"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Promotion & Events section -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Background="White" Padding="16" CornerRadius="16" Margin="0,0,12,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Khuyến mãi"/>
                                <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#FF4B5563">
                                    <Hyperlink NavigateUri="#" TextDecorations="None">Xem tất cả</Hyperlink>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel>
                                <Image Source="/Resources/Images/cat.jpg" Width="150" Height="150" Margin="0,8,0,0"/>
                                <Image Source="/Resources/Images/cat.jpg" Width="150" Height="150" Margin="0,8,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="White" Padding="16" CornerRadius="16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Sự kiện"/>
                                <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#FF4B5563">
                                    <Hyperlink NavigateUri="#" TextDecorations="None">Xem tất cả</Hyperlink>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel>
                                <Image Source="/Resources/Images/cat.jpg" Width="150" Height="150" Margin="0,8,0,0"/>
                                <Image Source="/Resources/Images/cat.jpg" Width="150" Height="150" Margin="0,8,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
