                    </StackPanel>
                </Border>

                <Border Style="{StaticResource NewsCard}">
                    <StackPanel>
                        <Image Height="180" Width="300" Source="pack://application:,,,/Resources/Images/card14.jpg"/>
                        <TextBlock Text="13/10/2025" Style="{StaticResource NewsDate}"/>
                        <TextBlock Style="{StaticResource NewsTitle}" Text="Úm ba la…"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource NewsCard}">
                    <StackPanel>
                        <Image Height="180" Width="300" Source="pack://application:,,,/Resources/Images/card15.jpg"/>
                        <TextBlock Text="13/10/2025" Style="{StaticResource NewsDate}"/>
