<Window x:Class="Theater_Management_FE.Views.AddAuditorium"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Add auditorium"
                       x:Name="titleLabel"
                       HorizontalAlignment="Center"/>
            <Border>
                <StackPanel>
                    <StackPanel>
                        <TextBlock Text="Enter auditorium name"/>
                        <TextBox x:Name="auditoriumNameField"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Enter auditorium type"/>
                        <TextBox x:Name="auditoriumTypeField"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Enter auditorium capacity"/>
                        <TextBox x:Name="auditoriumCapacityField"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Enter auditorium note"/>
                        <TextBox x:Name="auditoriumNoteField"
                                 TextWrapping="Wrap" AcceptsReturn="True"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Content="Back"
                                x:Name="backButton"/>
                        <Button Content="Add auditorium"
                                x:Name="addAuditoriumButton"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
