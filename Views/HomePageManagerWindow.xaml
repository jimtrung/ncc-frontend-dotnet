<Window x:Class="Theater_Management_FE.Views.HomePageManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home Page Manager"
        Width="800" Height="600"
        Background="White">
    <DockPanel>
        <!-- Top Navigation Bar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" 
                    HorizontalAlignment="Left" Margin="10,10,0,0">
            <Button Content="Movie"      Width="100" Height="40" Margin="0,0,25,0"
                    Background="#2196F3" Foreground="White" FontWeight="Bold"/>
            <Button Content="Auditorium" Width="100" Height="40" Margin="0,0,25,0"
                    Background="#2196F3" Foreground="White" FontWeight="Bold"/>
            <Button Content="Showtime"   Width="100" Height="40" Margin="0,0,25,0"
                    Background="#2196F3" Foreground="White" FontWeight="Bold"/>
            <Button Content="Profile"    Width="100" Height="40" Margin="0,0,25,0"
                    Background="#2196F3" Foreground="White" FontWeight="Bold"/>
            <Button Content="Log Out"    Width="100" Height="40"
                    Background="#2196F3" Foreground="White" FontWeight="Bold"/>
        </StackPanel>

        <!-- Separator Line -->
        <Separator DockPanel.Dock="Top" Height="1" Background="#CCCCCC" Margin="0,10,0,0"/>

        <!-- Main Content Area (empty for now) -->
        <Grid Background="#FAFAFA">
            <!-- Your future content goes here -->
        </Grid>
    </DockPanel>
</Window>
