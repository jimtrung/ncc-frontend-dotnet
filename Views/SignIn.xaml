<Window x:Class="Theater_Management_FE.Views.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign In - Theater Management"
        WindowState="Maximized"
        Background="{StaticResource PrimaryBackground}">
    <Grid>
        <!-- Gradient Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F1419" Offset="0"/>
                <GradientStop Color="#1A1F2E" Offset="0.5"/>
                <GradientStop Color="#0F1419" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Content -->
        <Border Style="{StaticResource card}"
                Width="450"
                Padding="48,40"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Welcome Back"
                           Style="{StaticResource title}"
                           FontSize="28"
                           Margin="0,0,0,8"/>
                
                <TextBlock Text="Sign in to your account"
                           Foreground="{StaticResource SecondaryText}"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,32"/>

                <!-- Username Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Username"
                               Style="{StaticResource form-label}"/>
                    <TextBox x:Name="usernameField"
                             Style="{StaticResource form-input}"
                             FontSize="15"/>
                </StackPanel>

                <!-- Password Field -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="Password"
                               Style="{StaticResource form-label}"/>
                    <PasswordBox x:Name="passwordField"
                                 Style="{StaticResource form-password}"
                                 FontSize="15"/>
                </StackPanel>

                <!-- Forgot Password Link -->
                <TextBlock HorizontalAlignment="Right" Margin="0,0,0,24">
                    <Hyperlink x:Name="forgotPasswordLink" 
                               NavigateUri="#" 
                               TextDecorations="None"
                               Foreground="{StaticResource PrimaryAccent}">
                        Forgot password?
                    </Hyperlink>
                </TextBlock>

                <!-- Buttons -->
                <Button x:Name="signInButton"
                        Content="Sign In"
                        Style="{StaticResource button-primary}"
                        Margin="0,0,0,12"
                        Padding="24,14"
                        FontSize="16"/>
                
                <Button x:Name="backButton"
                        Content="Back"
                        Style="{StaticResource button-secondary}"
                        Padding="24,14"
                        FontSize="16"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
