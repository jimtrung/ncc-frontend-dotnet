<Window x:Class="TheaterManagementApp.Views.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Theater Management"
        Width="600"
        Height="400"
        Background="#FFF">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Theater Management"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,40"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Sign Up"
                        Width="100"
                        Height="40"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,25,0"/>
                <Button Content="Sign In"
                        Width="100"
                        Height="40"
                        Background="#2196F3"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,25,0"/>
                <Button Content="Settings"
                        Width="100"
                        Height="40"
                        Background="#FF9800"
                        Foreground="White"
                        FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
