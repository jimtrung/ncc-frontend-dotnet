<Window x:Class="Theater_Management_FE.Views.HomePageUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="National Cinema Center" Width="1200" Height="800"
        WindowState="Maximized"
        Background="#FFF5F5F5">
    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1F2937"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#FF111827" Padding="16" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="TRUNG TÂM CHIẾU PHIM QUỐC GIA"
                                   Foreground="White"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="National Cinema Center"
                                   Foreground="#FF9CA3AF"
                                   FontSize="14"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Button x:Name="homeButton" Style="{StaticResource NavButtonStyle}" Content="Trang chủ" />
                    <Button x:Name="showTimesButton" Style="{StaticResource NavButtonStyle}" Content="Lịch chiếu" />
                    <Button x:Name="newsButton" Style="{StaticResource NavButtonStyle}" Content="Tin tức" />
                    <Button x:Name="promotionButton" Style="{StaticResource NavButtonStyle}" Content="Khuyến mãi" />
                    <Button x:Name="priceButton" Style="{StaticResource NavButtonStyle}" Content="Giá vé" />
                    <Button x:Name="aboutButton" Style="{StaticResource NavButtonStyle}" Content="Giới thiệu" />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Grid.Column="2"
                            VerticalAlignment="Center">
                    <StackPanel Margin="0,0,12,0">
                        <TextBlock Text="Xin chào,"
                                   Foreground="#FF9CA3AF"
                                   FontSize="12"
                                   HorizontalAlignment="Right"/>
                        <TextBlock x:Name="usernameText"
                                   Text="Khách"
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>
                    <Button x:Name="logoutButton"
                            Content="Đăng xuất"
                            Padding="16,8"
                            Background="#FFE11D48"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Visibility="Collapsed"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,25,40,40">
                <!-- Banner -->
                <Grid Height="350" Margin="0,0,0,25">
                    <Border CornerRadius="8">
                        <Image Source="/Resources/Images/cat.jpg" Stretch="UniformToFill"/>
                    </Border>
                    <TextBlock Text="THEATER MANAGEMENT"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="48"
                               FontWeight="Bold"
                               Foreground="White"/>
                </Grid>

                <!-- Main Content -->
                <StackPanel>
                    <!-- Now Showing Section -->
                    <StackPanel Margin="0,0,0,30">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Ellipse Width="12" Height="12" Fill="#FFE74C3C" VerticalAlignment="Center"/>
                            <TextBlock Text="Now showing" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Border Background="White" 
                                CornerRadius="12" 
                                Padding="20">
                            <ScrollViewer HorizontalScrollBarVisibility="Disabled" 
                                          VerticalScrollBarVisibility="Auto"
                                          MaxHeight="600">
                                <WrapPanel x:Name="movieList" Orientation="Horizontal"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>

                    <!-- Promotion & Events -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Promotion -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="Promotion" 
                                           FontSize="20" 
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel>
                                <Border CornerRadius="8" Margin="0,0,0,16" Background="White" Padding="10">
                                    <Image Source="/Resources/Images/cat.jpg" 
                                           Height="160" 
                                           Stretch="UniformToFill"/>
                                </Border>
                                <Border CornerRadius="8" Background="White" Padding="10">
                                    <Image Source="/Resources/Images/cat.jpg" 
                                           Height="160" 
                                           Stretch="UniformToFill"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <!-- Events -->
                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="Events" 
                                           FontSize="20" 
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel>
                                <Border CornerRadius="8" Margin="0,0,0,16" Background="White" Padding="10">
                                    <Image Source="/Resources/Images/cat.jpg" 
                                           Height="160" 
                                           Stretch="UniformToFill"/>
                                </Border>
                                <Border CornerRadius="8" Background="White" Padding="10">
                                    <Image Source="/Resources/Images/cat.jpg" 
                                           Height="160" 
                                           Stretch="UniformToFill"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
