<Window x:Class="TheaterManagementApp.Views.TinTucWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tin tức"
        Width="1000"
        Height="800"
        Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,20">
                <Image Source="http://localhost:8080/uploads/logos/logo.png" Width="120" Height="48"/>
                
                <StackPanel Orientation="Horizontal" Margin="20,0,0,0" HorizontalAlignment="Left">
                    <Button Content="Trang chủ" Margin="0,0,10,0"/>
                    <Button Content="Lịch chiếu" Margin="0,0,10,0"/>
                    <Button Content="Tin tức" Background="#2196F3" Foreground="White" Margin="0,0,10,0"/>
                    <Button Content="Khuyến mãi" Margin="0,0,10,0"/>
                    <Button Content="Giá vé" Margin="0,0,10,0"/>
                    <Button Content="Liên hoan phim" Margin="0,0,10,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="Auto,0,0,0">
                    <Button Content="Đăng ký" Margin="0,0,10,0"/>
                    <Button Content="Đăng nhập"/>
                </StackPanel>
            </StackPanel>

            <Label Content="Tin tức" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top" ItemWidth="300" ItemHeight="Auto" Margin="0,0,0,0">

                <Border Width="300" Margin="10" BorderBrush="#CCC" BorderThickness="1" Padding="10">
                    <StackPanel>
                        <Image Source="../images/cat.jpg" Width="300" Height="180"/>
                        <Label Content="24/10/2025" Foreground="#888"/>
                        <TextBlock Text="Gian hàng Trung tâm Chiếu phim Quốc gia chính thức góp mặt tại Hội chợ Mùa Thu 2025."
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Border Width="300" Margin="10" BorderBrush="#CCC" BorderThickness="1" Padding="10">
                    <StackPanel>
                        <Image Source="../images/cat.jpg" Width="300" Height="180"/>
                        <Label Content="13/10/2025" Foreground="#888"/>
                        <TextBlock Text="CINETOUR 'Tay Anh Giữ Một Vì Sao' tại Trung tâm Chiếu phim Quốc gia ngày 10/10/2025."
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Border Width="300" Margin="10" BorderBrush="#CCC" BorderThickness="1" Padding="10">
                    <StackPanel>
                        <Image Source="../images/cat.jpg" Width="300" Height="180"/>
                        <Label Content="10/10/2025" Foreground="#888"/>
                        <TextBlock Text="Cinetour 'Tay Anh Giữ Một Vì Sao' tại NCC ngày 9/10/2025."
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

            </WrapPanel>

        </StackPanel>
    </ScrollViewer>

</Window>
