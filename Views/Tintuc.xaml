                    </StackPanel>
                </Border>

                
            </WrapPanel>

            <!-- PAGE BUTTON -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15">
                <Button x:Name="BtnPrev" Style="{StaticResource PageBtn}" Content="⟵ Prev"/>
                <Button x:Name="BtnNext" Style="{StaticResource PageBtn}" Content="Next ⟶" Margin="20,0,0,0"/>
            </StackPanel>

            <!-- FOOTER -->
        <StackPanel Background="#0c0e12" Margin="0,30" >

    <Grid Margin="0,30,0,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Chính sách" Style="{StaticResource FooterMenuItem}" Margin="15,0"/>
            <TextBlock Text="Lịch chiếu" Style="{StaticResource FooterMenuItem}" Margin="15,0"/>
            <TextBlock Text="Tin tức" Style="{StaticResource FooterMenuItem}" Margin="15,0"/>
            <TextBlock Text="Giá vé" Style="{StaticResource FooterMenuItem}" Margin="15,0"/>
            <TextBlock Text="Hỏi đáp" Style="{StaticResource FooterMenuItem}" Margin="15,0"/>
            <TextBlock Text="Đặt vé nhóm" Style="{StaticResource FooterMenuItem}" Margin="15,0"/>
            <TextBlock Text="Liên hệ" Style="{StaticResource FooterMenuItem}" Margin="15,0"/>
        </StackPanel>

        <!-- Information -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,20">
            <TextBlock Text="Cơ quan chủ quản: BỘ VĂN HÓA, THỂ THAO VÀ DU LỊCH" Style="{StaticResource FooterInfo}" HorizontalAlignment="Center"/>
            <TextBlock Text="Bản quyền thuộc Trung tâm Chiếu phim Quốc gia" Style="{StaticResource FooterInfo}" HorizontalAlignment="Center"/>
