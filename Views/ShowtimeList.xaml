<Window x:Class="Theater_Management_FE.Views.ShowtimeList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movie List"
        WindowState="Maximized"
        Style="{StaticResource CustomWindowStyle}"
        Background="{StaticResource PrimaryBackground}">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center"> 
        
        <!-- Layout 1 cột để nút và bảng thẳng hàng -->
        <Grid Width="600"> <!-- chỉnh số này để khớp độ rộng bảng -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>   <!-- Close -->
                <RowDefinition Height="Auto"/>      <!-- Table -->
                <RowDefinition Height="Auto"/>   <!-- Buttons bottom -->
            </Grid.RowDefinitions>

            <!-- Close button -->
            <Button Content="Close"
                    x:Name="closeBtn"
                    Style="{StaticResource button-secondary}"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,20"/>

            <!-- DataGrid -->
            <DataGrid x:Name="showtimeTable"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      Style="{StaticResource data-grid-dark}"
                      Width="600">

                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="movieColumn" Header="Tên phim" />
                    <DataGridTextColumn x:Name="auditoriumColumn" Header="Tên phòng" />
                    <DataGridTextColumn x:Name="startColumn" Header="Giờ bắt đầu" />
                    <DataGridTextColumn x:Name="finishColumn" Header="Giờ kết thúc" />
                    <DataGridTextColumn x:Name="dateColumn" Header="Ngày chiếu" />
                    <DataGridTextColumn x:Name="quantityColumn" Header="Số lượng vé" />
                </DataGrid.Columns>

            </DataGrid>

            <!-- Bottom Buttons aligned with DataGrid -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,20">
                
                <Button Content="Delete All"
                        x:Name="deleteAllBtn"
                        Style="{StaticResource button-danger}"
                        Margin="0,0,10,0"/>
                
                <Button Content="Add Showtime"
                        x:Name="addShowtimeBtn"
                        Style="{StaticResource button-primary}" />
            </StackPanel>

        </Grid>

    </Grid>

</Window>
