<Window x:Class="Theater_Management_FE.Views.MovieListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movie List"
        Width="1000"
        Height="800"
        Background="White">

    <StackPanel HorizontalAlignment="Center" Margin="20">

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">
            <Button Content="❌" Width="40" Height="40"/>
        </StackPanel>

        <Grid HorizontalAlignment="Center" Margin="0,0,0,20">
            <DataGrid Width="900" Height="600" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tên phim" Width="160"/>
                    <DataGridTextColumn Header="Đạo diễn (ID)" Width="140"/>
                    <DataGridTextColumn Header="Thể loại" Width="180"/>
                    <DataGridTextColumn Header="Khởi chiếu" Width="120"/>
                    <DataGridTextColumn Header="Thời lượng" Width="90"/>
                    <DataGridTextColumn Header="Giới hạn tuổi" Width="80"/>
                    <DataGridTextColumn Header="Ngôn ngữ" Width="90"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
            <Button Content="Delete all" Width="100" Height="30" Background="#F44336" Foreground="White" Margin="0,0,10,0"/>
            <Button Content="Add Movie" Width="100" Height="30" Background="#2196F3" Foreground="White"/>
        </StackPanel>

    </StackPanel>

</Window>
