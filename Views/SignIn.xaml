<Window x:Class="Theater_Management_FE.Views.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign In">
    <StackPanel HorizontalAlignment="Center">
        <Label Content="Sign In" HorizontalAlignment="Center"/>
        <StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <Label Content="Username"/>
                <TextBox x:Name="usernameField"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <Label Content="Password"/>
                <PasswordBox x:Name="passwordField"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="backButton" Content="Back"/>
                <Button x:Name="signInButton" Content="Sign In"/>
            </StackPanel>
            <TextBlock HorizontalAlignment="Center">
                <Hyperlink x:Name="forgotPasswordLink" NavigateUri="#" TextDecorations="None">Forgot password?</Hyperlink>
            </TextBlock>
        </StackPanel>
    </StackPanel>
</Window>
