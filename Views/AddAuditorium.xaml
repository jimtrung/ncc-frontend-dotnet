<Window x:Class="Theater_Management_FE.Views.AddAuditorium"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="National Cinema Center"
        WindowState="Maximized"
        Style="{StaticResource CustomWindowStyle}"
        Background="{StaticResource PrimaryBackground}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Thêm Phòng Chiếu"
                       Style="{StaticResource title}"
                       Grid.Row="0"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,24"/>

            <Border Style="{StaticResource card}" Padding="24" MinWidth="400" MaxWidth="600" Grid.Row="1">
                <StackPanel>
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Tên phòng chiếu" Style="{StaticResource form-label}"/>
                        <TextBox x:Name="auditoriumNameField" Style="{StaticResource form-input}" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Loại phòng" Style="{StaticResource form-label}"/>
                        <TextBox x:Name="auditoriumTypeField" Style="{StaticResource form-input}" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Sức chứa" Style="{StaticResource form-label}"/>
                        <TextBox x:Name="auditoriumCapacityField" Style="{StaticResource form-input}" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Ghi chú" Style="{StaticResource form-label}"/>
                        <TextBox x:Name="auditoriumNoteField" TextWrapping="Wrap" AcceptsReturn="True" Height="100" Style="{StaticResource form-input}" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Quay Lại" x:Name="backButton" Style="{StaticResource button-secondary}" Margin="0,0,12,0"/>
                        <Button Content="Thêm Phòng" x:Name="addAuditoriumButton" Style="{StaticResource button-primary}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
