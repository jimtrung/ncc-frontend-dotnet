<Window x:Class="Theater_Management_FE.Views.AddShowtime"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Add Screening"
        WindowState="Maximized"
        Background="{StaticResource PrimaryBackground}">

    <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Add Showtime"
                   Style="{StaticResource title}"
                   Grid.Row="0"
                   HorizontalAlignment="Center"/>

        <!-- Main Content -->
        <Grid Grid.Row="1"
              HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT COLUMN -->
            <StackPanel Grid.Column="0">

                <!-- SELECT MOVIE -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Select movie"
                               Style="{StaticResource form-label}"/>
                    <TextBox x:Name="searchMovieField"
                             Style="{StaticResource form-input}"
                             Margin="0,0,0,5"/>
                    <ListView x:Name="movieListView"
                              Height="185"
                              SelectionMode="Single"
                              Style="{StaticResource list-view-dark}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Content="{Binding Item.Name}"
                                             GroupName="Movies"
                                             IsChecked="{Binding IsSelected}"
                                             Style="{StaticResource radio-dark}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <!-- SELECT ROOM -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Select Room"
                               Style="{StaticResource form-label}"/>
                    <TextBox x:Name="searchAuditoriumField"
                             Style="{StaticResource form-input}"
                             Margin="0,0,0,5"/>
                    <ListView x:Name="auditoriumListView"
                              Height="185"
                              SelectionMode="Single"
                              Style="{StaticResource list-view-dark}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Content="{Binding Item.Name}"
                                             GroupName="Rooms"
                                             IsChecked="{Binding IsSelected}"
                                             Style="{StaticResource radio-dark}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

            </StackPanel>

            <!-- RIGHT COLUMN -->
            <StackPanel Grid.Column="2">

                <!-- Start Time -->
                <StackPanel Margin="20"
                            Width="300"
                            HorizontalAlignment="Center">

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Start Time -->
                        <StackPanel Grid.Column="0"
                                    Margin="0,0,10,0">
                            <TextBlock Text="Start time"
                                       Style="{StaticResource form-label}"
                                       Margin="0,0,0,5"/>
                            <ComboBox x:Name="startTimePicker"
                                      Width="120"
                                      Height="30"
                                      Background="#FFF"
                                      BorderBrush="#CCC"
                                      Foreground="#333"
                                      FontSize="14"
                                      Padding="5"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="07:00"/>
                                <ComboBoxItem Content="08:00"/>
                                <ComboBoxItem Content="09:00"/>
                                <ComboBoxItem Content="10:00"/>
                                <ComboBoxItem Content="11:00"/>
                                <ComboBoxItem Content="12:00"/>
                                <ComboBoxItem Content="13:00"/>
                                <ComboBoxItem Content="14:00"/>
                                <ComboBoxItem Content="15:00"/>
                                <ComboBoxItem Content="16:00"/>
                                <ComboBoxItem Content="17:00"/>
                                <ComboBoxItem Content="18:00"/>
                                <ComboBoxItem Content="19:00"/>
                                <ComboBoxItem Content="20:00"/>
                                <ComboBoxItem Content="21:00"/>
                                <ComboBoxItem Content="22:00"/>
                                <ComboBoxItem Content="23:00"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- End Time -->
                        <StackPanel Grid.Column="1"
                                    Margin="10,0,0,0">
                            <TextBlock Text="End time"
                                       Style="{StaticResource form-label}"
                                       Margin="0,0,0,5"/>
                            <ComboBox x:Name="endTimePicker"
                                      Width="120"
                                      Height="30"
                                      Background="#FFF"
                                      BorderBrush="#CCC"
                                      Foreground="#333"
                                      FontSize="14"
                                      Padding="5"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="07:00"/>
                                <ComboBoxItem Content="08:00"/>
                                <ComboBoxItem Content="09:00"/>
                                <ComboBoxItem Content="10:00"/>
                                <ComboBoxItem Content="11:00"/>
                                <ComboBoxItem Content="12:00"/>
                                <ComboBoxItem Content="13:00"/>
                                <ComboBoxItem Content="14:00"/>
                                <ComboBoxItem Content="15:00"/>
                                <ComboBoxItem Content="16:00"/>
                                <ComboBoxItem Content="17:00"/>
                                <ComboBoxItem Content="18:00"/>
                                <ComboBoxItem Content="19:00"/>
                                <ComboBoxItem Content="20:00"/>
                                <ComboBoxItem Content="21:00"/>
                                <ComboBoxItem Content="22:00"/>
                                <ComboBoxItem Content="23:00"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                    <!-- Date Picker -->
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Text="Select date"
                                   Style="{StaticResource form-label}"
                                   Margin="0,0,0,5"/>
                        <DatePicker x:Name="showtimeDatePicker"
                                    Width="250"
                                    Height="30"
                                    FontSize="16"
                                    SelectedDate="{x:Static sys:DateTime.Today}"/>
                    </StackPanel>

                </StackPanel>

            </StackPanel>

        </Grid>

        <!-- BUTTON GROUP -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="660,10,0,0">
            <Button x:Name="backButton"
                    Content="Back"
                    Style="{StaticResource button-secondary}"
                    MinWidth="80"
                    Margin="0,0,10,0"/>

            <Button x:Name="addButton"
                    Content="Add"
                    Style="{StaticResource button-primary}"
                    MinWidth="80"/>
        </StackPanel>

    </Grid>
</Window>
