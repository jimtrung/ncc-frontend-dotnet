<Window x:Class="TheaterManagementApp.Views.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Profile"
        Width="500"
        Height="600"
        Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel HorizontalAlignment="Center" Margin="20">

            <Label Content="User Profile" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Width="400" Background="#F5F5F5" Margin="0,0,0,20">

                <StackPanel Margin="0,0,0,12">
                    <Label Content="Username"/>
                    <TextBox Width="340" IsReadOnly="True" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,12">
                    <Label Content="Email"/>
                    <TextBox Width="340" IsReadOnly="True" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,12">
                    <Label Content="Password"/>
                    <PasswordBox Width="340" IsEnabled="False" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,12">
                    <Label Content="Phone Number"/>
                    <TextBox Width="340" IsReadOnly="True" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,12">
                    <Label Content="Verified"/>
                    <TextBox Width="340" IsReadOnly="True" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,12">
                    <Label Content="Created Date"/>
                    <TextBox Width="340" IsReadOnly="True" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Back" Width="80" Background="#CCCCCC" Margin="0,0,14,0"/>
                    <Button Content="Edit Profile" Width="100" Background="#2196F3" Foreground="White" Margin="0,0,14,0"/>
                    <Button Content="Log Out" Width="80" Background="#F44336" Foreground="White"/>
                </StackPanel>

            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</Window>
