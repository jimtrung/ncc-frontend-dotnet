                    </StackPanel>
                </Border>

                <Border Style="{StaticResource NewsCard}">
                    <StackPanel>
                        <Image Height="180" Width="300" Source="pack://application:,,,/Resources/Images/card13.jpg"/>
                        <TextBlock Text="13/10/2025" Style="{StaticResource NewsDate}"/>
