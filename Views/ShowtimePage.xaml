<Window x:Class="Theater_Management_FE.Views.ShowtimePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="National Cinema Center"
        Width="1200" Height="800"
        WindowState="Maximized"
        Style="{StaticResource CustomWindowStyle}"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> 
            <RowDefinition Height="*" />   
        </Grid.RowDefinitions>

        <!-- 1. Header -->
        <Border Background="{StaticResource SecondaryBackground}" Padding="16" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <!-- Logo / Title -->
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="TRUNG TÂU CHIẾU PHIM QUỐC GIA" Foreground="{StaticResource PrimaryText}" FontSize="18" FontWeight="Bold" TextWrapping="Wrap" />
                        <TextBlock Text="National Cinema Center" Foreground="{StaticResource SecondaryText}" FontSize="14" />
                    </StackPanel>
                </StackPanel>
                <!-- Navigation Buttons -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="homeButton" Style="{StaticResource NavButtonStyle}" Content="Trang chủ" />
                    <Button x:Name="showTimesButton" Style="{StaticResource NavButtonStyle}" Content="Lịch chiếu" />
                    <Button x:Name="bookedTicketButton" Style="{StaticResource NavButtonStyle}" Content="Các vé đã đặt" />
                    <Button x:Name="newsButton" Style="{StaticResource NavButtonStyle}" Content="Tin tức" />
                    <Button x:Name="promotionButton" Style="{StaticResource NavButtonStyle}" Content="Khuyến mãi" />
                    <Button x:Name="priceButton" Style="{StaticResource NavButtonStyle}" Content="Giá vé" />
                    <Button x:Name="aboutButton" Style="{StaticResource NavButtonStyle}" Content="Giới thiệu" />
                </StackPanel>
                <!-- User Greeting / Logout -->
                <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                    <StackPanel Margin="0,0,12,0">
                        <TextBlock Text="Xin chào," Foreground="{StaticResource SecondaryText}" FontSize="12" HorizontalAlignment="Right" />
                        <TextBlock x:Name="usernameText" Text="Khách" Foreground="{StaticResource PrimaryText}" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Right" />
                    </StackPanel>
                    <Button x:Name="logoutButton" Content="Đăng xuất" Padding="16,8" Background="{StaticResource Danger}" Foreground="White" FontWeight="SemiBold" BorderThickness="0" Visibility="Collapsed" Cursor="Hand" Margin="0,0,10,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 2. Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,0,40">
                <!-- Banner -->
                <Grid Height="400">
                    <Image Source="pack://application:,,,/Resources/Images/pb.jpg" Stretch="UniformToFill"/>
                    <Border Background="#40000000"/> 
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="TRẢI NGHIỆM ĐIỆN ẢNH ĐỈNH CAO" FontSize="40" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="10"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <Button Content="CLICK ĐỂ XEM CÁC ƯU ĐÃI VÀ KHUYẾN MÃI" Style="{StaticResource button-primary}" HorizontalAlignment="Center" Margin="0,20,0,0" Padding="30,15" FontSize="16"/>
                    </StackPanel>
                </Grid>

                <!-- Movie Tabs -->
                <StackPanel Margin="40,40,40,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                        <RadioButton Content="ĐẶT VÉ" FontSize="20" FontWeight="Bold" Foreground="{StaticResource SecondaryText}" Style="{x:Null}">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Grid Cursor="Hand">
                                        <TextBlock Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}" FontSize="{TemplateBinding FontSize}" FontWeight="{TemplateBinding FontWeight}"/>
                                        <Border x:Name="underline" Height="3" Background="{StaticResource PrimaryAccent}" VerticalAlignment="Bottom" Margin="0,0,0,-5" Visibility="Collapsed"/>
                                    </Grid>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                    </StackPanel>

                    <!-- Movie Grid -->
                    <WrapPanel x:Name="showtimeList" HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
