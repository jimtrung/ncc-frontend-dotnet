<Window x:Class="Theater_Management_FE.Views.MovieList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movie List"
        WindowState="Maximized"
        Style="{StaticResource CustomWindowStyle}"
        Background="{StaticResource PrimaryBackground}">
    <StackPanel HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Content="Close" x:Name="closeBtn" Style="{StaticResource button-secondary}" />
            <Button Content="Delete all" x:Name="deleteAllBtn" Style="{StaticResource button-danger}" />
            <Button Content="Add Movie" x:Name="addMovieBtn" Style="{StaticResource button-primary}" />
        </StackPanel>
        <Grid HorizontalAlignment="Center">
            <DataGrid x:Name="movieTable" AutoGenerateColumns="False" Style="{StaticResource data-grid-dark}">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="nameColumn" Header="Tên phim" />
                    <DataGridTextColumn x:Name="directorColumn" Header="Đạo diễn (ID)" />
                    <DataGridTextColumn x:Name="genresColumn" Header="Thể loại" />
                    <DataGridTextColumn x:Name="premiereColumn" Header="Khởi chiếu" />
                    <DataGridTextColumn x:Name="durationColumn" Header="Thời lượng" />
                    <DataGridTextColumn x:Name="ratedColumn" Header="Giới hạn tuổi" />
                    <DataGridTextColumn x:Name="languageColumn" Header="Ngôn ngữ" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </StackPanel>
</Window>
